{
  "compilerOptions": {
    "baseUrl": "src",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "target": "es5",
    "allowJs": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "@components/*": ["components/*"],
      "@app/*": ["app/*"],
      "@layout/*": ["layout/*"],
      "@lib/*": ["lib/*"],
      "@pages/*": ["pages/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "outDir": "./dist",
      "esModuleInterop": true
    }
  },
  "include": ["src/*", "src/**/*", "server/*", "server/**/*"]
}
