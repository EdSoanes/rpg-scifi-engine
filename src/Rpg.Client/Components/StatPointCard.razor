@using Rpg.Sys.Components
@inject NavigationManager NavigationManager

<MudCard Elevation="25" Class="rounded-lg pb-4">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h5" Align="Align.Center">Stats</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudGrid>
            <MudItem xs="4">
                <ScoreBonusCard StatName="Strength" ScoreBonus="Stats?.Strength" />
            </MudItem>
            <MudItem xs="4">
                <ScoreBonusCard StatName="Intelligence" ScoreBonus="Stats?.Intelligence" />
            </MudItem>
            <MudItem xs="4">
                <ScoreBonusCard StatName="Wisdom" ScoreBonus="Stats?.Wisdom" />
            </MudItem>
            <MudItem xs="4">
                <ScoreBonusCard StatName="Dexterity" ScoreBonus="Stats?.Dexterity" />
            </MudItem>
            <MudItem xs="4">
                <ScoreBonusCard StatName="Constitution" ScoreBonus="Stats?.Constitution" />
            </MudItem>
            <MudItem xs="4">
                <ScoreBonusCard StatName="Charisma" ScoreBonus="Stats?.Charisma" />
            </MudItem>
        </MudGrid>
    </MudCardContent>
</MudCard>


@code {
    [Parameter]
    public StatPoints? Stats { get; set; }
}
